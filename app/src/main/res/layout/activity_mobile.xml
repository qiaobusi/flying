<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_mobile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWindow">

    <include
        layout="@layout/toolbar"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/edittext_margin_top"/>

    <EditText
        android:id="@+id/mobile"
        android:layout_width="match_parent"
        android:layout_height="@dimen/input_height"
        android:paddingLeft="@dimen/padding_left"
        android:paddingRight="@dimen/padding_right"
        android:background="@color/colorWhite"
        android:textSize="@dimen/text_size"
        android:hint="@string/mobile"
        android:inputType="phone"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"/>

    <TextView
        android:id="@+id/mobileResult"
        android:layout_width="match_parent"
        android:layout_height="@dimen/input_height"
        android:paddingLeft="@dimen/padding_left"
        android:paddingRight="@dimen/padding_right"
        android:gravity="center_vertical"
        android:background="@color/colorWhite"
        android:textSize="@dimen/text_size"
        android:visibility="gone"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_margin_top"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/padding_left"
        android:paddingRight="@dimen/padding_right">
        <Button
            android:id="@+id/mobileButton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:text="@string/confirm"
            android:textSize="@dimen/button_text_size"
            android:textColor="@color/colorWhite"
            android:background="@drawable/selector_button"/>
    </LinearLayout>



</LinearLayout>
